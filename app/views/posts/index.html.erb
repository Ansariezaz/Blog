<% name = current_user.present? ? current_user.email : 'Blogger' %>

<h1 align='center' style="background-color:powderblue;">Welcome <%= name %></h1>
<!--<p>Find me in app/views/home/index.html.erb</p> -->
<p align="center"><b>Hi,You can see blogs and also create blog itself.</b></p>


<p id="notice"><%= notice %></p>

<h2 style="background-color:LightGray;">Posts</h2>

<table style="width:100%">
  <thead>
    <tr style="border:2px solid Tomato;">
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
